{
  "$ref": "#/definitions/releases",
  "definitions": {
    "releases": {
      "type": "object",
      "properties": {
        "slug": {
          "type": "string"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "artist": {
          "type": "string",
          "minLength": 1
        },
        "releaseDate": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "cover": {
          "type": "string",
          "pattern": "^\\/.+\\.(jpg|jpeg|png|webp|gif|svg)$"
        },
        "gallery": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^\\/.+\\.(jpg|jpeg|png|webp|gif|svg)$"
          }
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "credits": {
          "type": "string"
        },
        "masteredBy": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "genre": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "format": {
          "type": "string",
          "enum": [
            "vinyl",
            "digital",
            "cassette",
            "CD",
            "other"
          ],
          "default": "digital"
        },
        "isDraft": {
          "type": "boolean",
          "default": false
        },
        "isUpcoming": {
          "type": "boolean",
          "default": false
        },
        "pressKitLink": {
          "type": "string",
          "format": "uri"
        },
        "recordPageLink": {
          "type": "string",
          "format": "uri"
        },
        "links": {
          "type": "object",
          "properties": {
            "bandcamp": {
              "type": "string",
              "format": "uri"
            },
            "spotify": {
              "type": "string",
              "format": "uri"
            },
            "soundcloud": {
              "type": "string",
              "format": "uri"
            },
            "appleMusic": {
              "type": "string",
              "format": "uri"
            },
            "youtube": {
              "type": "string",
              "format": "uri"
            },
            "tidal": {
              "type": "string",
              "format": "uri"
            },
            "discogs": {
              "type": "string",
              "format": "uri"
            }
          },
          "additionalProperties": false,
          "default": {}
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "relatedReleases": {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "collection": {
                    "type": "string"
                  }
                },
                "required": [
                  "id",
                  "collection"
                ],
                "additionalProperties": false
              },
              {
                "type": "object",
                "properties": {
                  "slug": {
                    "type": "string"
                  },
                  "collection": {
                    "type": "string"
                  }
                },
                "required": [
                  "slug",
                  "collection"
                ],
                "additionalProperties": false
              }
            ]
          }
        },
        "createdAt": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ],
          "default": "2025-07-22T15:47:35.963Z"
        },
        "updatedAt": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "slug",
        "title",
        "artist",
        "releaseDate",
        "description"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}