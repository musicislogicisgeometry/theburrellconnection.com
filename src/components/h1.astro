---
import clsx from "clsx/lite";
import { animate, stagger, inView } from "motion";

type Props = {
  className?: string;
  size?: "default" | "hero";
};

const { size = "default", className } = Astro.props;
---

<h1
  class={clsx(
    "text-white font-bold text-balance",
    size === "default" && "text-3xl md:text-6xl xl:text-8xl tracking-tight",
    size === "hero" &&
      "text-5xl  sm:mt-0 sm:text-[120px] lg:text-[160px] tracking-tighter",
    className
  )}
>
  <slot />
</h1>
